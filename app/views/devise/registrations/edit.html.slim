
= link_to "Back", :tests
h2 My profile


hr
/ -------- USER DATA
.row
  .four.columns
    p
      label User personal data
    p.small
      | You can update email or change Your password.
  .eight.columns
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "u-full-width") do |f|
      = devise_error_messages!
      .field
        = f.label :email
        = f.email_field :email, autofocus: true, class: "u-full-width"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        div
          | Currently waiting confirmation for:
          = resource.unconfirmed_email
      .field
        = f.label :password, "New password"
        = f.password_field :password, autocomplete: "off", class: "u-full-width"
      .field
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "off", class: "u-full-width"
      .field
        = f.label :current_password
        i
          | (we need your current password to confirm your changes)
        br
        = f.password_field :current_password, autocomplete: "off", class: "u-full-width"
      .actions
        = f.submit "Change", class: 'button-primary'
hr
/ -------- USER API TOKEN
.row
  .four.columns
    p
      label User API token
    p.small
      | Use this token in Your application in order to send testing data to server.
  .eight.columns
    input.u-full-width type="text" value=resource.authentication_token readonly="true"
hr
/ -------- DELETE ACCOUNT
.row
  .four.columns
    p
      label Delete account
    p.small
      | You can delete Your account without restore.
  .eight.columns
    p = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete
